<VirtualHost *:80>
  DocumentRoot <%= @params[:docroot] %>

  <Directory <%= @params[:docroot] %>>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>

  LogLevel info
  ErrorLog <%= @params[:log_dir] %>/<%= @params[:name] %>-error.log
  CustomLog <%= @params[:log_dir] %>/<%= @params[:name] %>-access.log combined
</VirtualHost>
